{{#paper-data-table sortProp="name" sortDir="desc" as |table|}}

  {{#table.head as |head|}}
    {{#head.column sortProp="full_name"}}Opponent{{/head.column}}
    {{#head.column sortProp="wins" numeric=true}}Wins{{/head.column}}
    {{#head.column sortProp="losses" numeric=true}}Losses{{/head.column}}
    {{#head.column numeric=true}}Win Pct{{/head.column}}
  {{/table.head}}

  {{#table.body as |body|}}
    {{#each (sort-by table.sortDesc model) as |owner|}}
      {{#body.row as |row|}}
        {{#row.cell}}{{owner.name}}{{/row.cell}}
        {{#row.cell numeric=true}}{{owner.wins}}{{/row.cell}}
        {{#row.cell numeric=true}}{{owner.losses}}{{/row.cell}}
        {{#row.cell numeric=true}}{{round (div owner.wins (add owner.wins owner.losses)) decimals=3}}{{/row.cell}}
      {{/body.row}}
    {{/each}}
  {{/table.body}}

{{/paper-data-table}}
